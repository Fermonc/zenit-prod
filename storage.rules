rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Cualquiera puede VER las im치genes (necesario para que la tienda funcione)
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Solo usuarios autenticados pueden SUBIR archivos
    // (Idealmente solo admins, pero esto es suficiente por ahora 
    // ya que solo el admin tiene acceso a la p치gina de subida en el UI)
    match /sorteo_imagenes/{imageId} {
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024 // M치x 5MB
                   && request.resource.contentType.matches('image/.*'); // Solo im치genes
    }
  }
}